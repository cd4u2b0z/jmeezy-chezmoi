if [ -f ~/.gtkrc-2.0 ]; then
    echo "   ‚úÖ GTK-2.0 config exists"
else
    echo "   ‚ùå GTK-2.0 config missing"
fi

echo ""
echo "üé® Available Icon Themes:"
ls /usr/share/icons/ | grep -i papirus | sed 's/^/   ‚Ä¢ /'

echo ""
echo "üõ†Ô∏è  Quick Actions:"
echo "   ‚Ä¢ Run theme switcher: /home/craig/.local/bin/apply-dark-theme"
