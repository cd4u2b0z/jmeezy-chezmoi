echo "   Color Scheme: $(gsettings get org.gnome.desktop.interface color-scheme)"

echo ""
echo "üìÅ GTK Config Files:"
if [ -f ~/.config/gtk-3.0/settings.ini ]; then
    echo "   ‚úÖ GTK-3.0 config exists"
    echo "      Theme: $(grep gtk-theme-name ~/.config/gtk-3.0/settings.ini 2>/dev/null || echo 'Not set')"
